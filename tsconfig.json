{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "baseUrl": ".",
    "outDir": "dist",
    "strict": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "esModuleInterop": true,
    "lib": ["esnext"],
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "plugins": [],
    "paths": {
      "@chaindexing": ["chaindexing/src/index.ts"],
      "@chaindexing/repos": ["chaindexing-repos/src/index.ts"],
      "@chaindexing/config": ["chaindexing-config/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "dist"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
